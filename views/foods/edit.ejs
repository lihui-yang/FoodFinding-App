<%- include("../partials/header") %>

<div class="container">
    <div class="col">
        <h1 style="text-align: center;"> Edit <%=food.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/foods/<%= food._id %>/?_method=PUT" method="POST"> 
                <div class="form-group">
                    <input class="form-control" type="text" name="food[name]" value="<%=food.name%>">
                </div>
                <div class="form-group">
                    <input class =  "form-control" type="text" name="food[image]" value="<%=food.image%>">
                </div>
                <div class="form-group">
                    <input class =  "form-control" type="text" name="food[restaurant]" value="<%=food.restaurant%>">
                </div>
                <div class="form-group">
                    <input class =  "form-control" type="text" name="food[description]" value="<%=food.description%>">
                </div>
                <div class="form-group">
                    <input class =  "form-control" type="text" name="food[price]" value="<%=food.price%>">
                </div>
                <div class="form-group">
                    <input class =  "form-control" type="text" name="food[page]" value="<%=food.page%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
               
             </form>
             <a href="/foods">Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>